<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/hzt"/>
    <TextView
        android:id="@+id/tv_system_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_system"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:text="WLCB00000001"/>
    <EditText
        android:id="@+id/et_system_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_system"
        android:layout_marginStart="8dp"
        android:text="WLCB00000001"
        android:hint="请输入自定义名称"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/et_system_name"
        android:text="更新"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btn_update"
        android:layout_marginStart="5dp"
        android:text="取消"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_system_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_system"
        android:layout_marginStart="8dp"
        android:layout_above="@+id/tv_system_value"
        android:text="正在获取地址"
        android:textColor="#666666"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="刚刚"
        android:textColor="#999999"/>
    <TextView
        android:id="@+id/tv_system_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/iv_system"
        android:text="xxxxxxxxxxxxxxxx"/>
    <View
        android:id="@+id/v_splite"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/tv_system_value"
        android:background="#eeeeee" />
</RelativeLayout>