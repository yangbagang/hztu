<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ybg.app.hztu.activity.battery.BatteryLineChartActivity">
    <!--统计项-->
    <LinearLayout
        android:id="@+id/ll_sum_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_item_bi"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/square_selected_bg"
            android:gravity="center"
            android:text="电池电流"
            android:textSize="14sp"
            android:textColor="@color/selectedColor"/>
        <TextView
            android:id="@+id/tv_item_btv"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/square_unselected_bg"
            android:gravity="center"
            android:text="电池组电压"
            android:textSize="14sp"
            android:textColor="@color/unSelectedColor"/>
    </LinearLayout>
    <!--统计周期-->
    <HorizontalScrollView
        android:id="@+id/ll_sum_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sum_item"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_period_2"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_selected_bg"
                android:gravity="center"
                android:text="分"
                android:textSize="14sp"
                android:textColor="@color/selectedColor"/>
            <TextView
                android:id="@+id/tv_period_3"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="时"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_4"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="天"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_5"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="月"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_6"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="年"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
        </LinearLayout>
    </HorizontalScrollView>
    <!--统计图-->
    <com.sctdroid.app.uikit.CurveView
        android:id="@+id/lc_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/ll_sum_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundColor="@android:color/transparent"
        app:corner="10dp"
        app:contentPaddingStart="40dp"
        app:contentPaddingEnd="40dp"
        app:contentPaddingBottom="20dp"
        app:contentPaddingTop="20dp"
        app:strokeWidth="1px"
        app:showXLine="true"
        app:showXText="true"
        app:contentColor="@android:color/black"
        app:dotTextColor="@color/colorPrimary"
        app:dotTextSize="8sp"
        app:axisTextSize="9sp"
        app:axisTextColor="@android:color/black"
        app:dotTextGravity="center_horizontal|bottom"
        app:showAll="false"
        app:unitWidth="100dp"/>
</android.support.constraint.ConstraintLayout>
