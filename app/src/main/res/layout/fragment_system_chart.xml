<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--统计周期-->
    <HorizontalScrollView
        android:id="@+id/ll_sum_period"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_period_2"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_selected_bg"
                android:gravity="center"
                android:text="分"
                android:textSize="14sp"
                android:textColor="@color/selectedColor"/>
            <TextView
                android:id="@+id/tv_period_3"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="时"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_4"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="天"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_5"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="月"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
            <TextView
                android:id="@+id/tv_period_6"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/square_unselected_bg"
                android:gravity="center"
                android:text="年"
                android:textSize="14sp"
                android:textColor="@color/unSelectedColor"/>
        </LinearLayout>
    </HorizontalScrollView>
    <!--统计图-->
    <com.ybg.app.hztu.view.chart.ScrollLineChartView
        android:id="@+id/lineChartView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sum_period"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:line_interval="60dp"
        app:min_point_height="60dp"
        app:background_color="#ffffff"/>
    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_sum_period"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="没有相关数据"
        android:textSize="20sp"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
