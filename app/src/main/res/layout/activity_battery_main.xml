<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_system"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentStart="true"
                        android:src="@mipmap/hzt"/>
                    <TextView
                        android:id="@+id/tv_system_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_system"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:text="用户名"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/tv_system_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_system"
                        android:layout_below="@id/tv_system_name"
                        android:layout_marginStart="5dp"
                        android:text="正在获取地址"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/tv_system_address2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_system"
                        android:layout_below="@id/tv_system_address1"
                        android:layout_marginStart="5dp"
                        android:text="正在获取地址"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/tv_system_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_system"
                        android:layout_below="@id/tv_system_address2"
                        android:layout_marginStart="5dp"
                        android:text="xx"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/tv_system_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:text="1"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
        <LinearLayout
            android:id="@+id/ll_battery_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="序号"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="电压"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="内阻"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="温度"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceListItem"
                android:text="最后更新"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="120dp">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center_horizontal|bottom">
        <View
            android:id="@+id/v_item_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_item_selected" />
        <View
            android:id="@+id/v_item_2"
            android:layout_width="24dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_height="24dp"
            android:background="@drawable/ic_item_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_system_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="UPS三进三出"
        android:background="@drawable/square_black_bg"
        android:layout_gravity="center_horizontal|bottom"/>

</android.support.design.widget.CoordinatorLayout>